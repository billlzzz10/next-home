# ============================================================================
# POE PROTOCOL CONFIGURATION
# ============================================================================
# Get this from Poe when you register your bot
POE_ACCESS_KEY=your_32_character_key_here

# ============================================================================
# GITHUB APP CONFIGURATION
# ============================================================================
# Create GitHub App at: https://github.com/settings/apps
# Get ID from: GitHub App Settings > About > App ID
GITHUB_APP_ID=123456

# App name as shown on GitHub
GITHUB_APP_NAME=bl1nk-architect

# Copy full private key from GitHub App (include BEGIN/END lines)
# Important: Use multiline format with \n for newlines
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nMIIEpAIBAAKCAQEA...\n-----END RSA PRIVATE KEY-----"

# ============================================================================
# GOOGLE GEMINI API
# ============================================================================
# Get from: https://ai.google.dev/
GOOGLE_API_KEY=your_gemini_api_key_here

# ============================================================================
# MODAL SERVERLESS
# ============================================================================
# Optional: if deploying to Modal
# Get from: modal.com dashboard
MODAL_TOKEN_ID=token_id
MODAL_TOKEN_SECRET=token_secret

# ============================================================================
# DEVELOPMENT
# ============================================================================
DEBUG=false
LOG_LEVEL=INFO
